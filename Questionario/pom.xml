	<modelVersion>4.0.0</modelVersion>
	<groupId>br.com.infnet</groupId>
	<artifactId>Questionario</artifactId>
	<version>1.0</version>
	<packaging>pom</packaging>

	<developers>
		<developer>
			<name>Jean Aquino</name>
			<roles>
				<role>System Analist</role>
				<role>System Developer</role>
